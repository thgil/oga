<div class="container">
  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span10">
      <div id="container-table">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th style="width: 5%"></th>
              <th style="width: 5%"><i class="icon-chevron-up"></i></th>
              <th style="width: 10%">Category <i class="icon-chevron-up"></th>
              <th>Link <i class="icon-chevron-up"></th>
              <th style="width: 5%">Options</th>
              <th style="width: 5%"></th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<rows.length;i++) {%>
            <tr>
              <td></td>
              <td><%=(page-1)*pagesize+i+1%></td>
              <td><%=rows[i].catg%></td>
              <td><a href="<%=rows[i].link %>"><strong><%=rows[i].name%></strong></a> </td>
              <td><i class="icon-ban-circle"></i> <i class="icon-pencil"></i> <i class="icon-trash"></i> </td>
              <td></td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<!-- Pagination! -->
<div class="pagination pagination-large pagination-centered">
  <ul>
    <%if(page<=1){%><li class="deactive"><span>Prev</span></li>
    <%} else {%> <li><a href="/?page=<%=page-1%>">Prev</a></li> <%}%>
    <li><a href="/?page=<%=page%>"><%=page%></a></li>
    <% if(rows.length<pagesize){%> <li class="deactive"><span>Next</span></li> 
    <%} else {%> <li><a href="/?page=<%=++page%>">Next</a></li> <%}%>
  </ul>
</div>

