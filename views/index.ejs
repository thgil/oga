<div class="container">

      <% if(typeof rows != 'undefined') {%>
      <div class="row-fluid">
        <div id="container-table">
          <table class="table table-striped table-hover" id="table-5">
            <thead>
              <tr>
                <th>Fid</th>
                <th>Link</th>
                <th>Name</th>
                <th>Descr</th>
                <th>Catg</th>
                <th>IP</th>
                <th>Options</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0;i<rows.length;i++) {%>
              <tr>
                <td> <%=rows[i].fid %> </td>
                <td> <%=rows[i].link %> </td>
                <td> <%=rows[i].name%> </td>
                <td> <%=rows[i].descr%> </td>
                <td> <%=rows[i].catg%> </td>
                <td> <%=rows[i].ip%> </td>
                <td> <i class="icon-star"></i> <i class="icon-trash"></i> </td>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
      </div>
      <%}%>
