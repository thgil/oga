<!DOCTYPE html>

<html lang="en">
<head>
  <title>NotMega</title>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/bootstrap-responsive.css">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/jquery-ui.min.css">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/parsley.css">

  <link rel="shortcut icon" type="image/png" href="/assets/images/favicon.png">
  <link rel="shortcut icon" type="image/png" href="/assets/img/glyphicons-halflings.png">
  <link rel="shortcut icon" type="image/png" href="/assets/img/glyphicons-halflings-white.png">
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-37623599-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body>



 <form  name="linkadd" method="post" action="/add" class="form-horizontal" data-validate="parsley">
    <fieldset>
      <legend>linkadd</legend>
      <div class="control-group">
        <label class="control-label" for="name">Title</label>
        <div class="controls">
          <input type="text" class="input-large" id="name" name="name" placeholder="Title" data-minlength="2" data-required="true" data-trigger="change">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="descr">Description</label>
        <div class="controls">
          <textarea type="message" class="input-large" id="descr" name="descr" placeholder="Info about the link" data-rangelength="[0,200]"></textarea>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="link">Link</label>
        <div class="controls">
          <input type="text" class="input-large" id="link" name="link" placeholder="Enter link here" data-type="url">
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="Category">Category</label>
        <select>
          <option>FILM</option>
          <option>TV</option>
          <option>BOOK</option>
          <option>PIC</option>
          <option>5</option>
        </select>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>  
    </fieldset>



  <% if(typeof rows != 'undefined') {%>
  <div class="row-fluid">
    <div id="container-table">
      <table class="table table-striped table-hover" id="table-5">
        <thead>
          <tr>
            <th>Fid</th>
            <th>Link</th>
            <th>Name</th>
            <th>Descr</th>
            <th>Catg</th>
            <th>IP</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0;i<rows.length;i++) {%>
          <tr>
            <td> <%=rows[i].fid %> </td>
            <td> <%=rows[i].link %> </td>
            <td> <%=rows[i].name%> </td>
            <td> <%=rows[i].descr%> </td>
            <td> <%=rows[i].catg%> </td>
            <td> <%=rows[i].ip%> </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
  </div>
  <%}%>

<script src="http://code.jquery.com/jquery-1.9.0.min.js"></script>
<script src="/js/jquery-ui.min.js"></script> 
<script src="/js/bootstrap.min.js"></script>
<script src="/js/parsley-standalone.min.js"></script>
</body>
</html>
