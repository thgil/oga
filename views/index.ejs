<% if (typeof order === 'undefined') order ="date desc"; %>
<% if (typeof page === 'undefined') page=1; %>
<% if (typeof pagesize === 'undefined') pagesize=10; %>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="#">NotMega</a>

            <form class="navbar-form navbar-search pull-left" action="/search" method="get">
              <input type="text" class="search-query" placeholder="Search links" name="name">
            </form>

            <a href="#linkadd" role="button" class="btn btn-primary btn-custom-width pull-right" style = "width: 160px;" data-toggle="modal">Add a link!</a>
              
        </div>
    </div>
</div>

<div class="container navpad">
  <% if (typeof error != 'undefined') {%>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Warning!</strong> <%=error%>.
  </div>
<%}%>
<% if (typeof success != 'undefined') {%>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Link added!</strong> <%=success%>
  </div>
<%}%>
  <div id="container-table">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          
          <th style="width: 15%">
             <%if(order=="date asc"){%><a href="/?order=date desc">Date <i class="icon-chevron-up"></i></a>
            <%}else if(order=="date desc"){%><a href="/?order=date asc">Date <i class="icon-chevron-down"></i></a>
            <% } else {%><a href="/?order=date asc">Date</a> <%}%>
          </th>
          <th style="width: 10%">
            <%if(order=="catg asc"){%><a href="/?order=catg desc">Category <i class="icon-chevron-up"></i></a>
            <%}else if(order=="catg desc"){%><a href="/?order=catg asc">Category <i class="icon-chevron-down"></i></a>
            <% } else {%><a href="/?order=catg asc">Category</a> <%}%>
          </th>
          <th>
            <%if(order=="name asc"){%><a href="/?order=name desc">Link <i class="icon-chevron-up"></i></a>
            <%}else if(order=="name desc"){%><a href="/?order=name asc">Link <i class="icon-chevron-down"></i></a>
            <% } else {%><a href="/?order=name asc">Link</a> <%}%>
          </th>
          <th style="width: 5%">
            Options
          </th>
          
        </tr>
      </thead>
      <tbody>
        <% for(var i=0;i<rows.length;i++) {%>
        <tr>
          
          <!-- <td><%=(page-1)*pagesize+i+1%></td> -->
          <td><%=rows[i].date.toString().slice(4,15)%></td>
          <td><%=rows[i].catg%></td>
          <td><a href="<%=rows[i].link %>"><strong><%=rows[i].name%></strong></a> </td>
          <td><i class="icon-ban-circle"></i> <i class="icon-pencil"></i> <i class="icon-trash"></i> </td>
          
        </tr>
        <%}%>
      </tbody>
    </table>
</div>
<!-- Pagination! -->
<div class="pagination pagination-large pagination-centered">
  <ul>
    <%if(page<=1){%><li class="deactive"><span>Prev</span></li>
    <%} else {%> <li><a href="/?page=<%=page-1%>">Prev</a></li> <%}%>
    <li><a href="/?page=<%=page%>"><%=page%></a></li>
    <% if(rows.length<pagesize){%> <li class="deactive"><span>Next</span></li> 
    <%} else {%> <li><a href="/?page=<%=++page%>">Next</a></li> <%}%>
  </ul>
</div>

<p class="muted" style="text-align: center"><a href="http://www.google.com/search?q=tos">TOSM</a> . <a href="http://www.google.com/search?q=DMCA">DMCA</a></p>

</div><!-- /container -->


<!-- Modal -->
  <div id="linkadd" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="linkadd" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Add a Link</h3>
    </div>
    <form  name="linkadd" method="post" action="/add" class="form-horizontal" data-validate="parsley">
    <div class="modal-body">
        <fieldset>
          <div class="control-group">
            <label class="control-label" for="name">Title</label>
            <div class="controls">
              <input type="text" class="input-large" id="name" name="name" placeholder="Title" data-minlength="2" data-required="true" data-trigger="change" required>
            </div>
          </div>
          <!-- <div class="control-group">
            <label class="control-label" for="descr">Description</label>
            <div class="controls">
              <textarea type="message" class="input-large" id="descr" name="descr" placeholder="Info about the link" data-rangelength="[0,200]"></textarea>
            </div>
          </div> -->
          <div class="control-group">
            <label class="control-label" for="link">Link</label>
            <div class="controls">
              <input type="text" class="input-large" id="link" name="link" placeholder="Enter link here" data-type="urlstrict" required>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="category">Category</label>
            <div class="controls">
              <select name="catg">
                <option value="Video">Video</option>
                <option value="Audio">Audio</option>
                <option value="Images">Images</option>
                <option value="Games">Games</option>
                <option value="Ebooks">Ebooks</option>
                <option value="Documents">Documents</option>
                <option value="Other">Other</option>
              </select>
            </div>
          </div>
        </fieldset>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button type="submit" class="btn btn-primary">Add Link</button>
    </div>
    </form>
  </div>

