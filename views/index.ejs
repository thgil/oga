<!-- Modal -->
  <div id="linkadd" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="linkadd" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Add a Link</h3>
    </div>
    <form  name="linkadd" method="post" action="/add" class="form-horizontal" data-validate="parsley">
    <div class="modal-body">
        <fieldset>
          <div class="control-group">
            <label class="control-label" for="name">Title</label>
            <div class="controls">
              <input type="text" class="input-large" id="name" name="name" placeholder="Title" data-minlength="2" data-required="true" data-trigger="change" required>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="descr">Description</label>
            <div class="controls">
              <textarea type="message" class="input-large" id="descr" name="descr" placeholder="Info about the link" data-rangelength="[0,200]"></textarea>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="link">Link</label>
            <div class="controls">
              <input type="text" class="input-large" id="link" name="link" placeholder="Enter link here" data-type="urlstrict" required>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="category">Category</label>
            <div class="controls">
              <select name="catg">
                <option value="Video">Video</option>
                <option value="Games">Games</option>
                <option value="books">Books</option>
                <option value="TV">TV</option>
                <option value="Other">Other</option>
              </select>
            </div>
          </div>
        </fieldset>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button type="submit" class="btn btn-primary">Add Link</button>
    </div>
    </form>
  </div>
<% if (typeof error != 'undefined') {%>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Warning!</strong> Best check yo self, you're not looking too good.
  </div>
<%}%>
<% if (typeof success != 'undefined') {%>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Link added!</strong> <%=success%>
  </div>
<%}%>


